{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src"]
}
